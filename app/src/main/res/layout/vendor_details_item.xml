<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/relativeLayout"
    android:elevation="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/vdi_vendorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/artifika"
        android:text="vendor name"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/vdi_shopImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        app:srcCompat="@drawable/decorate" />


    <TextView
        android:id="@+id/vdi_shopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:text="Shop name"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/vdi_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="10dp"
        android:text="vendor email"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vdi_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="30dp"
        android:text="vendor mobile"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/approve_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="260dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:text="Approve"
        android:textColor="@color/lightBlue"
        android:elevation="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/approved_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="260dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:text="Approved"
        android:textColor="@color/lightBlue"
        android:elevation="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/details_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="150dp"
        android:background="@color/white"
        android:text="Details"
        android:textColor="@color/lightBlue"
        android:elevation="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reject_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="280dp"
        android:background="@color/white"
        android:text="Reject"
        android:textColor="@color/lightBlue"
        android:elevation="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="280dp"
        android:background="@color/white"
        android:text="Delete"
        android:textColor="@color/lightBlue"
        android:elevation="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="10dp"
        android:background="@color/lightBlue" />
</RelativeLayout>
